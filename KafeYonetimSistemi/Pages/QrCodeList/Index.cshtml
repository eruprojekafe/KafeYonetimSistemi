@page "{tableNumber:int}"
@model KafeYonetimSistemi.Pages.QrCodeList.QrCodeListModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Menü</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .category-box {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 150px;
            height: 200px; 
            border: 2px solid lightgray;
            border-radius: 10px;
            text-align: center;
            margin: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: bold;
            color: cadetblue;
        }

            .category-box:hover {
                background-color: lightgray;
                color: white;
            }

        .category-image {
            width: 100%;
            height: auto;
            max-width: 140px;
            border-radius: 10px;
            margin-bottom: 10px;
            object-fit: contain; 
        }

        .category-text {
            margin-top: 5px;
            font-size: 1rem;
        }

        .categories-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 30px;
        }

    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-4">FREESİA MENÜ</h1>

        <!-- Kategoriler -->
        <div class="categories-container">
            @if (Model.Categories != null && Model.Categories.Any())
            {
                @foreach (var category in Model.Categories)
                {
                    <div class="category-box" data-category-id="@category.Id" onclick="location.href='/MenuList/@category.Id?tableNumber=@Model.TableNumber'">
                        <img src="@(string.IsNullOrEmpty(category.ImageUrl) ? "/images/logo.png" : category.ImageUrl)"
                             class="category-image" />
                        <p class="category-text">@category.Name</p>
                    </div>
                }
            }
            else
            {
                <p class="text-center">Henüz kategori bulunmamaktadır.</p>
            }
        </div>
    </div>
</body>
</html>
