@page "/MenuList/{categoryId:int}"
@model KafeYonetimSistemi.Pages.MenuList.MenuListModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.CategoryName Menü Listesi</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .card {
            transition: all 0.3s ease-in-out;
            overflow: hidden;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-img-top {
            width: 100%;
            aspect-ratio: 1 / 1;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 15px;
        }

        .card-text.description {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
        }

            .card-text.description.expanded {
                white-space: normal;
                overflow: visible;
            }

        .quantity-controls {
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .quantity-controls button {
                width: 35px;
                height: 35px;
                background-color: skyblue;
                color: white;
                border: none;
                border-radius: 5px;
                font-size: 18px;
                cursor: pointer;
                transition: background-color 0.2s;
            }

                .quantity-controls button:hover {
                    background-color: skyblue;
                }

            .quantity-controls input {
                width: 60px;
                height: 35px;
                text-align: center;
                font-size: 18px;
                border: 1px solid #ddd;
                border-radius: 5px;
                margin: 0 10px;
                padding: 5px;
            }

                .quantity-controls input:focus {
                    outline: none;
                    border-color: skyblue;
                }

        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
            font-size: 16px;
        }

            .btn-primary:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">@Model.CategoryName Menü Listesi</h1>

        @if (Model.MenuItems.Any())
        {
            <div class="row">
                @foreach (var item in Model.MenuItems)
                {
                    <div class="col-md-4 mb-4 d-flex">
                        <div class="card">
                            <img src="@(item.ImageUrl ?? "/images/logo.png")" class="card-img-top" alt="Image" />
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text description" onclick="toggleExpand(this)">@item.Description</p>
                                <p class="card-text"><strong>Fiyat:</strong> @item.Price.ToString("C")</p>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="quantity-controls">
                                        <button class="btn btn-secondary" onclick="changeQuantity(@item.Id, -1)">-</button>
                                        <input type="number" class="form-control" id="quantity-@item.Id" min="1" value="1" style="width: 60px;" readonly />
                                        <button class="btn btn-secondary" onclick="changeQuantity(@item.Id, 1)">+</button>
                                    </div>
                                    @if (item.IsAvailable)
                                    {
                                        <button class="btn btn-primary" onclick="addToCart(@item.Id)">Sepete Ekle</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary" disabled>Stokta Yok</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-danger">Bu kategoriye ait menü öğesi bulunmamaktadır.</p>
        }
    </div>

    <script>
        function toggleExpand(element) {
            element.classList.toggle('expanded');
        }

        function changeQuantity(itemId, change) {
            var quantityInput = document.getElementById('quantity-' + itemId);
            var currentQuantity = parseInt(quantityInput.value);
            var newQuantity = currentQuantity + change;

            // Adet 1'in altına düşmesin
            if (newQuantity >= 1) {
                quantityInput.value = newQuantity;
            }
        }

        function addToCart(itemId) {
            var quantity = document.getElementById('quantity-' + itemId).value;
            console.log("Ürün ID: " + itemId + ", Adet: " + quantity);
            // Burada sepete ekleme işlemi yapılacak.
            // Örneğin, AJAX veya Form gönderimi ile server'a veri gönderebilirsiniz.
        }
    </script>
</body>
</html>