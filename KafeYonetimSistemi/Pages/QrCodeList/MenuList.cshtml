@page "{categoryId:int}"
@model KafeYonetimSistemi.Pages.MenuList.MenuListModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.CategoryName Menü Listesi</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">@Model.CategoryName Menü Listesi</h1>

        @if (Model.MenuItems.Count > 0)
        {
            <div class="row">
                @foreach (var item in Model.MenuItems)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Description</p>
                                <p class="card-text"><strong>Fiyat:</strong> @item.Price.ToString("C")</p>
                                @if (item.IsAvailable)
                                {
                                    <a href="#" class="btn btn-success">Satın Al</a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary" disabled>Stokta Yok</button>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-danger">Bu kategoriye ait menü öğesi bulunmamaktadır.</p>
        }
    </div>
</body>
</html>