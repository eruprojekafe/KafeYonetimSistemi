@page
@model KafeYonetimSistemi.Pages.QrCodeList.CartModel
@{
    ViewData["Title"] = "Sepet";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sepetim</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .category-return-button {
            position: fixed;
            bottom: 80px;
            left: 50%;
            transform: translateX(-50%);
            padding: 10px 20px;
            font-size: 1.2rem;
            background-color: cadetblue;
            color: white;
            border-radius: 25px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .category-return-button:hover {
                background-color: #5f9ea0;
                transform: translateX(-50%) scale(1.1);
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Sepetim</h1>
        <!-- Sepet içeriği buraya yüklenecek -->
        <div id="cartContents" class="mt-3"></div>
        <!-- Sepet içeriği burada tekrar tanımlanmadı -->
        <button id="paymentButton" class="btn btn-success mt-3" style="display: none;" onclick="submitCart()">Ödeme Yap</button>
    </div>
    <a href="/QrCodeList/@Model.TableNumber" class="btn btn-link btn-lg category-return-button">Menüye Dön</a>

    <script src="~/js/cart.js" asp-append-version="true"></script>
</body>
</html>