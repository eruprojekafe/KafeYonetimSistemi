<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kafe Yönetim Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KafeYonetimSistemi.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> <!-- FontAwesome -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Koşullu Navbar Başlık ve Ana Sayfa Linki -->
                @if (!ViewContext.ActionDescriptor.DisplayName.Contains("QrCodeList"))
                {
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Kafe Yönetim Sistemi</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Ana Sayfa</a>
                            </li>
                        </ul>

                        <!-- Koşullu Login/Signup -->
                        <partial name="_LoginPartial" />
                    </div>
                }
                <!-- QR Code Sayfası İçin Hoşgeldiniz Metni ve İkon -->
                @if (ViewContext.ActionDescriptor.DisplayName.Contains("QrCodeList"))
                {
                    <div class="d-flex justify-content-center align-items-center w-100">
                        <span class="fw-bold" style="font-style: italic; flex-grow: 1; text-align: center;">Freesia Kafeye Hoşgeldiniz</span>
                        <a href="javascript:void(0);" class="btn btn-outline-dark position-relative" onclick="location.href='/QrCodeList/Cart';">
                            <i class="bi bi-cart" style="font-size: 2rem;"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="cart-count">
                                0
                            </span>
                        </a>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - KafeYonetimSistemi - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Sepet Sayaç İşlevi -->
    <script src="~/js/cart.js" asp-append-version="true"></script>
    <script>
        updateCartCount();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<head>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Diğer içerikler -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/card/2.5.0/card.min.js"></script>
</body>
