@page
@model KafeYonetimSistemi.Pages.Inventory.UpdateModel
@using KafeYonetimSistemi.Models

@{
	ViewData["Title"] = "Güncelle";
}

<!DOCTYPE html>
<html>

<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewData["Title"]</title>
	<style>
		.form-group {
			margin-bottom: 20px;
		}

		label {
			font-weight: bold;
		}

		input[type="radio"] {
			margin-right: 8px;
		}

		.btn {
			margin-top: 15px;
		}
	</style>
</head>

<body>
	<h1 class="text-center">Envanter Yönetim Sistemi</h1>
	<h3>Güncelle: @Model.MenuItem?.Name</h3>
	<hr />

	<div class="row">
		<div class="col-md-6">
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="MenuItemTransaction.MenuItemId" />

				<div class="form-group">
					<label>İşlem Türü:</label><br />
					<input type="radio" asp-for="MenuItemTransaction.TransactionType" value="ADD" id="add" />
					<label for="add">Ekle</label>
					<input type="radio" asp-for="MenuItemTransaction.TransactionType" value="REMOVE" id="remove" />
					<label for="remove">Çıkar</label>
				</div>

				<div class="form-group">
					<label for="amount">Miktar:</label>
					<input asp-for="MenuItemTransaction.Amount" class="form-control" id="amount"
						placeholder="Miktar giriniz" />
					<span asp-validation-for="MenuItemTransaction.Amount" class="text-danger"></span>
				</div>

				<div class="form-group">
					<input type="submit" value="Güncelle" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>

	@section Scripts {
		@{
			await Html.RenderPartialAsync("_ValidationScriptsPartial");
		}
	}
</body>

</html>