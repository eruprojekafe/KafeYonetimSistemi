@page
@model KafeYonetimSistemi.Pages.Inventory.IndexModel
@using KafeYonetimSistemi.Models

@{
    ViewData["Title"] = "ENVANTER YÖNETİMİ";
}

<h1>ENVANTER YÖNETİMİ</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem[0].Name)
            </th>
            <th>
                Miktar
            </th>
            <th>
                İşlem
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MenuItem)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
               
                <td>
                    <p>@Model.GetCurrentAmount(item.Id)</p>
                </td>
                <td>
                    <button type="button" class="btn btn-primary" disabled>Düzenle</button>
                    <!-- Yönlendirme yapılacak-->
                </td>
            </tr>
        }
    </tbody>
</table>
