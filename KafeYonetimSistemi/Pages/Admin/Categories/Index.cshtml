@page
@model KafeYonetimSistemi.Pages.Admin.Categories.IndexModel

@{
    ViewData["Title"] = "Kategori Listesi";
}

<h1>Kategori Listesi</h1>

<p>
    <a asp-page="Create">Yeni Kategori Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Category)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Detaylar</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
