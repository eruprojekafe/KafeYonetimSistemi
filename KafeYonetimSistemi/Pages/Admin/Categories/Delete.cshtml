@page
@model KafeYonetimSistemi.Pages.Admin.Categories.DeleteModel

@{
    ViewData["Title"] = "Kategori Sil";
}

<h1 class="mb-4">Kategori Sil</h1>

<div class="alert alert-warning text-center" role="alert" style="font-size: 1.2rem; margin-bottom: 20px;">
    <strong>Bu kaydı silmek istediğinize emin misiniz?</strong>
</div>

<div class="bordered-form">
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>

    <form method="post" class="mt-4">
        <input type="hidden" asp-for="Category.Id" />
        <input type="submit" value="Kategoriyi Sil" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary ms-2">Listeye Geri Dön</a>
    </form>
</div>
