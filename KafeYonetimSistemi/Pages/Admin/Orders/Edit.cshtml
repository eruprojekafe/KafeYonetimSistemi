@page
@model KafeYonetimSistemi.Pages.Admin.Orders.EditModel

@{
    ViewData["Title"] = "Siparişi Düzenle";
}

<h1 class="mb-4">Siparişi Düzenle</h1>


<h4 class="fw-bold text-dark mb-3">SİPARİŞ</h4>
<hr />
<div class="bordered-form">
<div class="row">
      <div class="col-md-6">
        <form class="mt-3" method="post">
            <div class="form-group mb-3">
                <label asp-for="Order.Table">Masa Seçimi</label>
                <select asp-for="Order.Table.Id" class="form-control" asp-items="Model.AvailableTables">
                    <option value="">-- Masa Seçin --</option>
                </select>
                <span asp-validation-for="Order.Table.Id" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.Id" />
                <div class="form-group mb-3">
                <label asp-for="Order.OrderTime" class="control-label"></label>
                <input asp-for="Order.OrderTime" class="form-control" />
                <span asp-validation-for="Order.OrderTime" class="text-danger"></span>
            </div>
                <div class="form-group mb-3">
                <div class="form-group">
                    <label asp-for="Order.Status">Sipariş Durumu</label>
                    <select asp-for="Order.Status" class="form-control" asp-items="Model.OrderStatusList">
                        <option value="">-- Sipariş Durumu Seçin --</option>
                    </select>
                    <span asp-validation-for="Order.Status" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" style="margin-right: 10px;" />
                <a asp-page="./Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>
</div>
 

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}