@page
@model KafeYonetimSistemi.Pages.Admin.Tables.EditModel

@{
    ViewData["Title"] = "Düzenle";
}

<h1 class="mb-4">Düzenle</h1>


<div class="bordered-form">
    <h4 class="fw-bold text-dark mb-3">MASA</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form class=" mt-3" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Table.Id" />

                <div class="form-group" style="margin-bottom: 30px;">
                    <label asp-for="Table.TableNumber" class="control-label"></label>
                    <input asp-for="Table.TableNumber" class="form-control" readonly />
                    <span asp-validation-for="Table.TableNumber" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-bottom: 30px;">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Table.IsAvailable" />
                        @Html.DisplayNameFor(model => model.Table.IsAvailable)
                    </label>
                </div>


               
                <div class="form-group mb-5">
                    <input type="submit" value="Kaydet" class="btn btn-primary" style="margin-right: 10px;" />
                    <a asp-page="./Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
