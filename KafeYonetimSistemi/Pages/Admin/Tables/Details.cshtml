@page
@model KafeYonetimSistemi.Pages.Admin.Tables.DetailsModel

@{
    ViewData["Title"] = "Detaylar";
}

<h1 class="mb-4">Detaylar</h1>

<h4 class="fw-bold text-dark mb-3">Masa Bilgisi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="bordered-form">
            <dl class="row">

                <div class="form-group mb-5">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Table.TableNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Table.TableNumber)
                    </dd>
                </div>


                <div class="form-group mb-5">
                    <dl class="row">
                        <dt class="col-sm-2 mb-2">
                            @Html.DisplayNameFor(model => model.Table.IsAvailable)
                        </dt>
                        <dd class="col-sm-10 mb-2">
                            @Html.DisplayFor(model => model.Table.IsAvailable)
                        </dd>
                    </dl>
                </div>

            </dl>
            <div class="form-group mb-5">
                <a asp-page="./Edit" asp-route-id="@Model.Table.Id" class="btn btn-warning">Düzenle</a> |
                <a asp-page="./Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </div>


       
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

