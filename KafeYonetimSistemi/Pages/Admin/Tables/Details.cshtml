@page
@model KafeYonetimSistemi.Pages.Admin.Tables.DetailsModel

@{
    ViewData["Title"] = "Detaylar";
}

<h1>Detaylar</h1>

<h4>Masa Bilgisi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="bordered-form">
            <dl class="row">

                <div class="form-group">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Table.TableNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Table.TableNumber)
                    </dd>
                </div>


                <div class="form-group">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Table.IsAvailable)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Table.IsAvailable)
                    </dd>
                </div>
            </dl>
        </div>


        <div class="form-group">
            <a asp-page="./Edit" asp-route-id="@Model.Table.Id" class="btn btn-warning">Düzenle</a> |
            <a asp-page="./Index" class="btn btn-secondary">Listeye Geri Dön</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<style>

    .bordered-form {
        border: 2px solid #ddd;
        padding: 20px;
        border-radius: 8px;
    }


    .form-group {
        margin-bottom: 40px;
    }


    h1 {
        margin-bottom: 20px;
    }

    h4 {
        margin-bottom: 15px;
    }


    .btn {
        margin-top: 10px;
    }
</style>
