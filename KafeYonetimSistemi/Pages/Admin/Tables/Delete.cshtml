@page
@model KafeYonetimSistemi.Pages.Admin.Tables.DeleteModel

@{
    ViewData["Title"] = "Sil";
}

<h1 class="mb-4">Sil</h1>


<div class="alert alert-warning text-center" role="alert" style="font-size: 1.2rem; margin-bottom: 20px;">
    <strong>Bu kaydı silmek istediğinize emin misiniz?</strong>
</div>

<div class="bordered-form">
    <h4 class="fw-bold text-dark mb-3">MASA</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Table.TableNumber)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Table.TableNumber)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Table.IsAvailable)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Table.IsAvailable)
        </dd>
    </dl>

    <form method="post" style="margin-top: 20px;">
        <input type="hidden" asp-for="Table.Id" />
        <input type="submit" value="Sil" class="btn btn-danger" style="margin-right: 10px;" /> 
        <a asp-page="./Index" class="btn btn-secondary">Listeye Geri Dön</a>
    </form>
</div>


<style>


    .row dt, .row dd {
        margin-bottom: 15px;
    }
</style>

