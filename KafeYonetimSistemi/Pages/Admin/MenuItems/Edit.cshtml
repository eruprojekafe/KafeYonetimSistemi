@page
@model KafeYonetimSistemi.Pages.Admin.MenuItems.EditModel

@{
    ViewData["Title"] = "Ürünü Düzenle";
}

<h1 class="mb-4">Ürünü Düzenle</h1>

<div class="bordered-form">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MenuItem.Id" />

        <div class="form-group mb-4">
            <label asp-for="MenuItem.Name" class="form-label">Ürün Adı</label>
            <input asp-for="MenuItem.Name" class="form-control" />
            <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="MenuItem.Description" class="form-label">Açıklama</label>
            <input asp-for="MenuItem.Description" class="form-control" />
            <span asp-validation-for="MenuItem.Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="MenuItem.Price" class="form-label">Fiyat</label>
            <input asp-for="MenuItem.Price" class="form-control" />
            <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
        </div>

        <div class="form-check mb-4">
            <input class="form-check-input" asp-for="MenuItem.IsAvailable" />
            <label class="form-check-label" asp-for="MenuItem.IsAvailable">Mevcut</label>
        </div>

        <div class="d-flex gap-3">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
            <a asp-page="./Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
