@page
@model KafeYonetimSistemi.Pages.Admin.MenuItems.UpdateModel
@using KafeYonetimSistemi.Models


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
</head>
<body>
    <h1 class ="text-center">Envanter Yönetim Sistemi</h1>
    <h3>Güncelle: @Model.MenuItem.Name</h3>
    <p>Mevcut Stok: <strong>@Model.CurrentAmount</strong></p>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label>İşlem Türü:</label><br />
                    <input type="radio" id="add" name="MenuItemTransaction.TransactionType" value="ADD"
                           checked="@((Model.MenuItemTransaction.TransactionType == TransactionType.ADD) ? "checked" : "")" />
                    <label for="add">Ekle</label>
                    <input type="radio" id="remove" name="MenuItemTransaction.TransactionType" value="REMOVE"
                           checked="@((Model.MenuItemTransaction.TransactionType == TransactionType.REMOVE) ? "checked" : "")" />
                    <label for="remove">Çıkar</label>           
            </div>
            <div class="form-group">
                    <label for="amount">Miktar:</label>
                    <input asp-for="MenuItemTransaction.Amount" class="form-control" id="amount" placeholder="Miktar giriniz" />
                    <span asp-validation-for="MenuItemTransaction.Amount" class="text-danger"></span>
            </div>


                <input asp-for="MenuItemTransaction.Timestamp" type="hidden" />
            <div class="form-group">
                    <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div> 
            
        </form>
    </div>
</div>

<div>
        <a asp-page="Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
