@page
@model KafeYonetimSistemi.Pages.Admin.MenuItems.IndexModel

@{
    ViewData["Title"] = "Ürün Listesi";
}

<h1 class="mb-4">Ürün Listesi</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Yeni Ürün Oluştur</a>
</p>

<table class="table table-bordered table-striped bordered-form">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.MenuItem[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.MenuItem[0].Description)</th>
            <th>@Html.DisplayNameFor(model => model.MenuItem[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.MenuItem[0].IsAvailable)</th>
            <th>Aksiyonlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MenuItem)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.IsAvailable)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detaylar</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
