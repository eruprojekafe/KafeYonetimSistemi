@page
@model KafeYonetimSistemi.Pages.Admin.MenuItems.CreateModel

@{
    ViewData["Title"] = "Ürün Oluştur";
}
 
<h1 class="mb-4">Ürün Oluştur</h1>
<h4 class="fw-bold text-dark mb-3">ÜRÜN</h4>
<hr />

<div class="bordered-form">
    <form method="post">
        <div class="form-group mb-3">
            <label asp-for="MenuItem.CategoryId" class="form-label">Kategori Seçimi</label>
            <select asp-for="MenuItem.CategoryId" class="form-select" asp-items="Model.AvailableCategories">
                <option value="">-- Kategori Seçin --</option>
            </select>
            <span asp-validation-for="MenuItem.CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="MenuItem.Name" class="form-label">Ürün Adı</label>
            <input asp-for="MenuItem.Name" class="form-control" />
            <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="MenuItem.Description" class="form-label">Açıklama</label>
            <input asp-for="MenuItem.Description" class="form-control" />
            <span asp-validation-for="MenuItem.Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="MenuItem.Price" class="form-label">Fiyat</label>
            <input asp-for="MenuItem.Price" class="form-control" />
            <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="MenuItem.IsAvailable" />
            <label class="form-check-label" asp-for="MenuItem.IsAvailable">Mevcut</label>
        </div>

        <div class="form-group mb-3">
            <input type="submit" value="Oluştur" class="btn btn-primary" />
            <a asp-page="./Index" class="btn btn-secondary ms-2">Listeye Geri Dön</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
