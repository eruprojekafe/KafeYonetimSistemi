@page
@model KafeYonetimSistemi.Pages.Admin.MenuItems.DetailsModel

@{
    ViewData["Title"] = "Ürün Detayları";
}

<h1 class="mb-4">Ürün Detayları</h1>

<h4 class="fw-bold text-dark mb-3">Ürün</h4>
<hr />

<div class="bordered-form">
    <dl class="row">
        <dt class="col-sm-3">Adı</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.MenuItem.Name)</dd>

        <dt class="col-sm-3">Açıklama</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.MenuItem.Description)</dd>

        <dt class="col-sm-3">Fiyat</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.MenuItem.Price)</dd>

        <dt class="col-sm-3">Mevcut</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.MenuItem.IsAvailable)</dd>
    </dl>

    <div class="d-flex gap-3">
        <a asp-page="./Edit" asp-route-id="@Model.MenuItem.Id" class="btn btn-warning">Düzenle</a>
        <a asp-page="./Index" class="btn btn-secondary">Listeye Geri Dön</a>
    </div>
</div>
