@page
@model KafeYonetimSistemi.Pages.Admin.MenuItems.DeleteModel

@{
    ViewData["Title"] = "Ürün Sil";
}

<h1 class="mb-4">Ürün Sil</h1>

<div class="bordered-form">
    <div class="alert alert-warning text-center" role="alert" style="font-size: 1.2rem; margin-bottom: 20px;">
        <strong>Bu kaydı silmek istediğinize emin misiniz?</strong>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Adı</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.MenuItem.Name)</dd>

        <dt class="col-sm-3">Açıklama</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.MenuItem.Description)</dd>

        <dt class="col-sm-3">Fiyat</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.MenuItem.Price)</dd>

        <dt class="col-sm-3">Mevcut</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.MenuItem.IsAvailable)</dd>
    </dl>

    <form method="post" class="d-flex gap-3">
        <input type="hidden" asp-for="MenuItem.Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Listeye Geri Dön</a>
    </form>
</div>
